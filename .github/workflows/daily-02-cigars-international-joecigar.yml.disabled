name: Cigars International Joe Cigar Scraper

on:
  schedule:
    # Run once daily at 6 AM UTC
    - cron: '0 6 * * *'
  workflow_dispatch: # Allows manual triggering

jobs:
  scrape-joecigar-deals:
    runs-on: ubuntu-latest
    timeout-minutes: 60 # Allow up to 60 minutes for Joe Cigar scrape
    
    steps:
    - name: Checkout repository
      uses: actions/checkout@v4
      with:
        repository: SnickerSec/cigar-things
        token: ${{ secrets.PRIVATE_REPO_TOKEN }}
      
    - name: Set up Python 3.11
      uses: actions/setup-python@v4
      with:
        python-version: '3.11'
        
    - name: Install Chrome
      uses: browser-actions/setup-chrome@v1
      with:
        chrome-version: stable
        
    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install -r requirements.txt
        
    - name: Install Chrome WebDriver
      run: |
        # ChromeDriver will be automatically installed by webdriver-manager
        echo "ChromeDriver will be installed automatically by webdriver-manager"
        
    - name: Run Cigars International Joe Cigar Scraper
      env:
        DATABASE_URL: ${{ secrets.RAILWAY_DATABASE_URL }}
        MAX_PAGES: 3  # Joe Cigar typically has fewer pages
        PYTHONPATH: ${{ github.workspace }}
      run: |
        cd ${{ github.workspace }}
        python app/scrapers/daily/cigars_international_joecigar_scraper.py
        
    - name: Upload CSV results as artifact
      uses: actions/upload-artifact@v4
      if: always()
      with:
        name: cigars-international-joecigar-results-${{ github.run_number }}
        path: |
          data/exports/csv/cigarsinternationaljoecigar_deals_*.csv
          data/exports/csv/cigarsinternationaljoecigar_deals_*_metadata.txt
        retention-days: 7
        
    - name: Generate summary report
      if: success()
      run: |
        echo "## ðŸš¬ Cigars International Joe Cigar Scraper Summary" >> $GITHUB_STEP_SUMMARY
        echo "- âœ… Joe Cigar scraper completed successfully" >> $GITHUB_STEP_SUMMARY
        echo "- ðŸ“„ Scraped up to 3 pages of Joe Cigar deals" >> $GITHUB_STEP_SUMMARY
        echo "- ðŸŽ¯ Specialized for Joe Cigar branded products" >> $GITHUB_STEP_SUMMARY
        echo "- ðŸ—„ï¸ Data saved to Railway PostgreSQL database" >> $GITHUB_STEP_SUMMARY
        echo "- ðŸ“ CSV files available as artifacts" >> $GITHUB_STEP_SUMMARY
        echo "- ðŸ·ï¸ Enhanced brand detection for Joe Cigar variants" >> $GITHUB_STEP_SUMMARY
        echo "- ðŸ“Š Quantity detection and price per cigar calculations" >> $GITHUB_STEP_SUMMARY
        echo "- ðŸ’° Discount percentage extraction from page elements" >> $GITHUB_STEP_SUMMARY
        echo "- ðŸ¤– Advanced anti-detection measures for Cigars International" >> $GITHUB_STEP_SUMMARY
        
    - name: Notify on failure
      if: failure()
      run: |
        echo "ðŸš¨ Cigars International Joe Cigar scraper failed!"
        echo "Check the logs above for details"
        echo "## âŒ Cigars International Joe Cigar Scraper Failed" >> $GITHUB_STEP_SUMMARY
        echo "The Joe Cigar scraper encountered an error. Check the logs for details." >> $GITHUB_STEP_SUMMARY