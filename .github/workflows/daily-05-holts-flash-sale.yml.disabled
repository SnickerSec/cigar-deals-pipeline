name: Holt's Flash Sale Daily Scraper

on:
  schedule:
    # Run daily at 10:00 AM UTC (1-day flash sales refresh daily)
    - cron: '0 10 * * *'
  workflow_dispatch: # Allow manual triggering

jobs:
  scrape-holts-flash-sale:
    runs-on: ubuntu-latest
    timeout-minutes: 20 # Flash sale scraper should be quick

    steps:
    - name: Checkout repository
      uses: actions/checkout@v4
      with:
        repository: SnickerSec/cigar-things
        token: ${{ secrets.PRIVATE_REPO_TOKEN }}

    - name: Set up Python 3.11
      uses: actions/setup-python@v4
      with:
        python-version: '3.11'

    - name: Install Chrome
      uses: browser-actions/setup-chrome@v1
      with:
        chrome-version: stable

    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install -r requirements.txt

    - name: Install Chrome WebDriver
      run: |
        # ChromeDriver will be automatically installed by webdriver-manager
        echo "ChromeDriver will be installed automatically by webdriver-manager"

    - name: Run Holt's Flash Sale Scraper
      env:
        DATABASE_URL: ${{ secrets.RAILWAY_DATABASE_URL }}
        PYTHONPATH: ${{ github.workspace }}
      run: |
        cd ${{ github.workspace }}
        python app/scrapers/daily/holts_flash_sale_scraper.py

    - name: Upload CSV results as artifact
      uses: actions/upload-artifact@v4
      if: always()
      with:
        name: holts-flash-sale-${{ github.run_number }}
        path: |
          holts_flash_*.csv
          holts_flash_*_metadata.txt
        retention-days: 7

    - name: Generate summary report
      if: success()
      run: |
        echo "## ðŸ“Š Holt's Flash Sale Scraper Summary" >> $GITHUB_STEP_SUMMARY
        echo "- âœ… Holt's 1-Day Flash Sale scraper completed successfully" >> $GITHUB_STEP_SUMMARY
        echo "- ðŸ”¥ 24-hour deals with FREE SHIPPING and up to 80% off" >> $GITHUB_STEP_SUMMARY
        echo "- â° Time-sensitive daily deals refresh every 24 hours" >> $GITHUB_STEP_SUMMARY
        echo "- ðŸ—„ï¸ Data saved to Railway PostgreSQL database" >> $GITHUB_STEP_SUMMARY
        echo "- ðŸ“ CSV files available as artifacts" >> $GITHUB_STEP_SUMMARY

    - name: Notify on failure
      if: failure()
      run: |
        echo "ðŸš¨ Holt's Flash Sale scraper failed!"
        echo "Check the logs above for details"
        echo "## âŒ Holt's Flash Sale Scraper Failed" >> $GITHUB_STEP_SUMMARY
        echo "The Holt's Flash Sale scraper encountered an error. Check the logs for details." >> $GITHUB_STEP_SUMMARY
