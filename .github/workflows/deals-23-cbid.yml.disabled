name: CBid Auctions Scraper

on:
  schedule:
    # Run daily at 2:00 PM UTC
    - cron: '0 14 * * *'
  workflow_dispatch:

jobs:
  scrape-cbid:
    runs-on: ubuntu-latest
    timeout-minutes: 30

    steps:
    - name: Checkout repository
      uses: actions/checkout@v4
      with:
        repository: SnickerSec/cigar-things
        token: ${{ secrets.PRIVATE_REPO_TOKEN }}

    - name: Set up Python 3.11
      uses: actions/setup-python@v4
      with:
        python-version: '3.11'

    - name: Install Chrome for botasaurus
      run: |
        sudo apt-get update
        sudo apt-get install -y google-chrome-stable

    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install -r requirements.txt

    - name: Run CBid Scraper
      env:
        DATABASE_URL: ${{ secrets.RAILWAY_DATABASE_URL }}
        PYTHONPATH: ${{ github.workspace }}
        MAX_PRODUCTS: 500
      run: |
        cd ${{ github.workspace }}
        python app/scrapers/deals/cbid_scraper.py

    - name: Upload CSV results as artifact
      uses: actions/upload-artifact@v4
      if: always()
      with:
        name: cbid-auctions-${{ github.run_number }}
        path: |
          data/exports/csv/cbid_*.csv
        retention-days: 7

    - name: Generate summary report
      if: success()
      run: |
        echo "## ðŸ“Š CBid Auctions Scraper Summary" >> $GITHUB_STEP_SUMMARY
        echo "- âœ… CBid scraper completed successfully" >> $GITHUB_STEP_SUMMARY
        echo "- ðŸŽ¯ Scraped live cigar auctions from America's #1 auction site" >> $GITHUB_STEP_SUMMARY
        echo "- ðŸ¢ CBid (CigarBid) - America's premier online cigar auction" >> $GITHUB_STEP_SUMMARY
        echo "- ðŸ’° Features live auction prices and time remaining" >> $GITHUB_STEP_SUMMARY
        echo "- ðŸ”¨ Captures current bid, lot ID, and time left" >> $GITHUB_STEP_SUMMARY
        echo "- ðŸš€ Uses botasaurus for reliable anti-bot bypass" >> $GITHUB_STEP_SUMMARY
        echo "- ðŸ“¦ Extracts from ~5000 available auctions" >> $GITHUB_STEP_SUMMARY
        echo "- ðŸ—„ï¸ Data saved to Railway PostgreSQL database" >> $GITHUB_STEP_SUMMARY
        echo "- ðŸ“ CSV files available as artifacts" >> $GITHUB_STEP_SUMMARY

    - name: Notify on failure
      if: failure()
      run: |
        echo "ðŸš¨ CBid scraper failed!"
        echo "Check the logs above for details"
        echo "## âŒ CBid Scraper Failed" >> $GITHUB_STEP_SUMMARY
        echo "The CBid scraper encountered an error. Check the logs for details." >> $GITHUB_STEP_SUMMARY
